# =============================================================================
# CONFIGURACIÓN OPTIMIZADA PARA PRODUCCIÓN
# =============================================================================
# Copia este archivo como .env en tu servidor de producción
# y ajusta los valores según tu entorno.
# =============================================================================

APP_NAME="SystemsGG"
APP_ENV=production
APP_KEY=base64:GENERA_UNA_NUEVA_KEY_CON_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=America/Lima
APP_URL=https://systemsgg.com

# =============================================================================
# OPTIMIZACIÓN DE RENDIMIENTO - CRÍTICO PARA TTFB
# =============================================================================

# Usar 'file' es más rápido que 'database' para hosting compartido
# Si tienes Redis disponible, usa 'redis' para mejor rendimiento
CACHE_STORE=file
SESSION_DRIVER=file

# Si tienes Redis disponible (RECOMENDADO):
# CACHE_STORE=redis
# SESSION_DRIVER=redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# =============================================================================
# BASE DE DATOS
# =============================================================================

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tu_base_de_datos
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password

# Optimización de conexiones MySQL
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# =============================================================================
# LOGS - Solo errores en producción
# =============================================================================

LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# =============================================================================
# MAIL
# =============================================================================

MAIL_MAILER=smtp
MAIL_HOST=smtp.tu-proveedor.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@dominio.com
MAIL_PASSWORD=tu_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@systemsgg.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# SESIONES
# =============================================================================

SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# =============================================================================
# SEGURIDAD
# =============================================================================

# Forzar HTTPS
FORCE_HTTPS=true

# =============================================================================
# QUEUE (si usas colas)
# =============================================================================

QUEUE_CONNECTION=database

# Si tienes Redis:
# QUEUE_CONNECTION=redis

# =============================================================================
# FILESYSTEM
# =============================================================================

FILESYSTEM_DISK=local

# =============================================================================
# NOTAS DE OPTIMIZACIÓN
# =============================================================================
#
# DESPUÉS DE CONFIGURAR EL .env, EJECUTAR:
#
# 1. Optimizar Laravel:
#    php artisan config:cache
#    php artisan route:cache
#    php artisan view:cache
#    php artisan event:cache
#    php artisan optimize
#
# 2. Optimizar Composer:
#    composer dump-autoload --optimize --no-dev --classmap-authoritative
#
# 3. O simplemente ejecutar el script:
#    bash scripts/deploy-optimize.sh (Linux/Mac)
#    scripts\deploy-optimize.bat (Windows)
#
# 4. Verificar que PHP OPcache esté habilitado:
#    php -i | grep opcache
#
# =============================================================================
